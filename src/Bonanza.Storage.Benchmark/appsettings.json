{
	"Serilog": {
		"Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
		"MinimumLevel": "Debug",
		"Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
		"WriteTo": [
			{ "Name": "Console" },
			{
				"Name": "File",
				"Args": {
					"path": "./logs/performance.log",
					"rollingInterval": "Day",
					"fileSizeLimitBytes": 1000,
					"rollOnFileSizeLimit": true,
					"retainedFileCountLimit": null,
					"shared": true
				}
			}
		]
	},
	"PgSqlEventStoreConfig": {
		"ConnectionString": "Host=localhost;Database=bonanza-test-db;Username=root;Password=root",
		//"ConnectionString": "Host=20.102.99.1;Port=5433;Database=bonanza-test-db;Username=root;Password=root",
		//"ConnectionString": "Host=10.0.0.4;Port=5433;Database=bonanza-test-db;Username=root;Password=root",
		"LogEveryNEvents": 10000,
		"Strategy": "TwoPhases"
	},

	"BenchmarkConfig": {
		//"BatchesCount": 10,
		"BatchesCount": 2,
		//"StreamsCountInBatch": 5000000,
		"StreamsCountInBatch": 1000,
		//"EventCountInStream": 50,
		"EventCountInStream": 5,
		"EventsInBatchPrefixName": "stream20210617",
		"DropDb": true
	}
}